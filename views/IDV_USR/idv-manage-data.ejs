<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NDC-GAEC-dashboard</title>
 
  <link rel="stylesheet" href="/styles/dashboard.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

</head>
<body>
  <div class="main-dashboard">
    <div class="dh-menu">
      <div>
        <a href="/dashboard">Dashboard</a>
        <a href="/add">Add Data</a>
        <a href="/manage-data">Manage Data</a>
      </div>
     
    </div>
    <div class="dh-nav-content">
      <div class="dh-nav">
        <a href="/download" class="btn btn-primary">ðŸ“¥ Download in (CSV) format</a>
        <a href="/download-excel" class="btn btn-success">ðŸ“Š Download as Excel format</a>

      </div>
      <form action="/search" method="get" class="manage-data">
        <input type="search" name="query" placeholder="search all avaliable input">
        <button type="submit">Search</button>
      </form>
      <table border="1">
        <thead>
          <tr>
            <th>ID</th>
            <th>Day</th>
            <th>Minute</th>
            <th>Second</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>H</th>
            <th>Mb</th>
            <th>Ml</th>
            <th>Az</th>
            <th>Location</th>
            <th>Nearest_Location</th>
            <th>DELETE</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(data => { %>
            <tr> 
              <td><%= data.id %></td>
              <td><%= data.day %></td>
              <td><%= data.minute %></td>
              <td><%= data.second %></td>
              <td><%= data.latitude %></td>
              <td><%= data.longitude %></td>
              <td><%= data.h %></td>
              <td><%= data.mb %></td>
              <td><%= data.ml %></td>
              <td><%= data.az %></td>
              <td><%= data.location %></td>
              <td><%= data.nearest_location %></td>
              <td>
                <form action="/data/<%= data.id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this row?');">
                  <button type="submit" class="delete-btn">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
          
        </tbody>
        
      </table>
    </div>
</body>
</html>