      <div class="event-data">
        <h1>INSERT DATA</h1>
        <form action="/events" method="post"  class="event-form">
          <table border="1" style="height: 50px;">
            <thead>
            <tr>
              <th name="id"> ID</th>
              <th name="Day">Date</th>
              <th name="Minute">Minute</th>
              <th name="Second">Second</th>
              <th name="Latitude">Latitude</th>
              <th name="Longitude">Longitude</th>
              <th name="H">H</th>
              <th name="Mb">Mb</th>
              <th name="Ml">Ml</th>
              <th name="Az">Az</th>
              <th name="Location">Location</th>
              <th name="Nearest_location">Nearest_Location</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><input type="text" name="id" id="id" placeholder="ID"></td>
              <td><input type="text" name="day" placeholder="DD/MM/YYYY" required /></td>
              <td><input type="text" name="minute" placeholder="(00:00)" required /></td>
              <td><input type="text" name="second" placeholder="00:00:00" required /></td>
              <td><input type="text" name="latitude" required /></td>
              <td><input type="text" name="longitude" required /></td>
              <td><input type="text" name="H" required /></td>
              <td><input type="text" name="Mb" required /></td>
              <td><input type="text" name="Ml" required /></td>
              <td><input type="text" name="Az" required /></td>
              <td><input type="text" name="location" required /></td>
              <td><input type="text" name="nearest_location" required /></td>
            </tr>
          </table>
        </tbody>
        <tr>
          <td>
            <button type="submit">Submit</button>
          </td>
        </tr>
        </form>
      </div>
    </div>
  </div>
</body>
</html>